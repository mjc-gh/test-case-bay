<div id="<%= @id -%>" class="grid grid-cols-2 gap-5 sm:grid-cols-4">
  <% items.each do |item| -%>
    <div class="relative flex items-center space-x-3 rounded-lg border border-zinc-300 bg-slate-700 px-6 py-5 shadow-xl focus-within:ring-2 focus-within:ring-teal-500 focus-within:ring-offset-2 hover:border-zinc-500">
      <div class="flex-shrink-0 flex-1">
        <%= item -%>
      </div>
    </div>
  <% end -%>
</div>
