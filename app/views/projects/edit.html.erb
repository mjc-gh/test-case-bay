<%= render PageComponent.new do |c| -%>
  <% c.header { 'Edit Project' } -%>

  <% c.action do -%>
    <%= link_to project_path(@project) do %>
      <%= render ButtonComponent.new(color: :clear).with_content 'Back' -%>
    <% end -%>
  <% end -%>

  <%= render "form", project: @project %>
<% end -%>
