<%= render PageComponent.new do |c| -%>
  <% c.header { 'Projects' } -%>

  <% c.action do -%>
    <%= link_to new_project_path do %>
      <%= render ButtonComponent.new.with_content 'New Project' -%>
    <% end -%>
  <% end -%>

  <% render GridComponent.new(id: 'projects') do |gc| -%>
    <% @projects.each do |project| %>
      <% gc.item do -%>
        <%= link_to project do -%>
          <%= render project %>
        <% end -%>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
