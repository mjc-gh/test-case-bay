<%= form_with(model: project, data: { turbo: false }) do |form| %>
  <%= model_errors project -%>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= render ButtonComponent.new(type: 'submit').with_content 'Save Project' -%>
  </div>
<% end %>
