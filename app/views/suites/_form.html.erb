<%= form_with(model: suite, url: [project, suite], data: { turbo: false }) do |form| %>
  <%= model_errors suite -%>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="action">
    <%= render ButtonComponent.new(type: 'submit').with_content 'Save Suite' -%>
  </div>
<% end %>
