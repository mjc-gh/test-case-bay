<%= render PageComponent.new do |c| -%>
  <% c.header { 'Edit Suite' } -%>

  <% c.sub_header do -%>
    <p class="text-gray-300 text-lg"><%= @project.title -%><p>
  <% end -%>

  <% c.action do -%>
    <%= link_to project_suite_path(@project, @suite) do %>
      <%= render ButtonComponent.new(color: :clear).with_content 'Back' -%>
    <% end -%>
  <% end -%>

  <%= render "form", project: @project, suite: @suite %>
<% end -%>
