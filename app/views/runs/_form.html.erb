<%= form_with(model: run, data: { turbo: false }) do |form| %>
  <%= model_errors run -%>

  <% if run.new_record? -%>
    <div class="field">
      <%= form.label :project_id %>
      <%= form.select :project_id, @projects.map { |p| [ p.title, p.id ] } %>
    </div>
  <% end -%>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= render ButtonComponent.new(type: 'submit').with_content 'Save Run' -%>
  </div>
<% end %>
