  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :acceptance_criteria, style: "display: block" %>
    <%= form.text_area :acceptance_criteria %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
